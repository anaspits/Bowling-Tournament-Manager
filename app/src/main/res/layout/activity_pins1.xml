<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_championship"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1) Import the file with the points system"
        android:textSize="18sp"
        android:textAlignment="center"
android:layout_marginTop="20dp" />



    <Button
        android:id="@+id/button_import"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4285F4"
        android:onClick="openNewActivity"
        android:text="@string/Import"
        android:textColor="#F9F9F9"
        android:layout_marginTop="35dp"
android:layout_gravity="center" />

        <CheckedTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:checkMark="@android:drawable/checkbox_on_background"
            android:checked="true"
            android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:textAlignment="center"
        android:text="2) How many rounds?"
        android:textSize="18sp"
        android:layout_marginTop="35dp"/>

    <EditText
        android:id="@+id/editNorounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/e_g_4"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.205"
        android:autofillHints="" />

    <!--  <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recyclerView"
          android:layout_width="421dp"
          android:layout_height="253dp"
          android:layout_marginTop="36dp"
          app:layout_constraintBottom_toTopOf="@+id/next_btn"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/button_import"
          tools:listitem="@layout/list_item" /> -->

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:background="#4CAF50 "
        android:onClick="openNewActivity"
        android:text="@string/start_championship"
        android:textColor="#F9F9F9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_import"
        app:layout_constraintVertical_bias="0.941"
        tools:text="Start Championship" />



    </LinearLayout>
    </ScrollView>



    </LinearLayout>