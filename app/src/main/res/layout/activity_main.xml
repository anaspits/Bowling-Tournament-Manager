<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="80dp" />

            <Button
                android:id="@+id/button_start"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:background="#4CAF50"
                android:onClick="openNewActivity"
                android:text="@string/start_a_championship"
                android:textColor="#F9F9F9"
                android:textSize="16sp"
                android:layout_gravity="center"/>
    <Button
        android:id="@+id/button_con"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#4CAF50"
        android:onClick="openNewActivity"
        android:text="Continue Championship"
        android:textColor="#F9F9F9"
        android:textSize="16sp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/button_old"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:onClick="openNewActivity"
        android:text="Finished Championships"
        android:textColor="#F9F9F9"
        android:textSize="16sp"
        android:layout_marginTop="1dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/button_stat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="#4CAF50"
        android:onClick="openNewActivity"
        android:text="Statistics"
        android:textColor="#F9F9F9"
        android:textSize="16sp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/button_players"
        android:layout_width="250dp"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:onClick="openNewActivity"
        android:text="@string/players"
        android:textColor="#F9F9F9"
        android:textSize="16sp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:background="#DB1D1D"
        android:onClick="openNewActivity"
        android:text="@string/exit"
        android:textColor="#F9F9F9"
        android:textSize="16sp"
        android:layout_gravity="center"
        tools:text="Exit" />

        </LinearLayout>
    </ScrollView>
    </LinearLayout>