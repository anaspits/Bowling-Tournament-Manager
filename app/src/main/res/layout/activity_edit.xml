<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player's first name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"/>

    <TextView
        android:id="@+id/plastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player's last name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editlastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"/>

    <TextView
        android:id="@+id/pavg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avegare"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editavg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="avg"
        android:inputType="number" />

    <TextView
        android:id="@+id/tfid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team fid"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editteam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="team"
        android:inputType="number" />

    <TextView
        android:id="@+id/phdcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hdcp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edithdcp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hdcp"
        android:inputType="number"
        android:autofillHints="" />

    <TextView
        android:id="@+id/pfid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player's fid"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editfid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="fid"
        android:inputType="number"
        android:autofillHints="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="updateDB"
            android:text="update"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelUpdate"
            android:text="cancel" />
    </LinearLayout>

    <TextView
        android:id="@+id/testid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />


</LinearLayout>