<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="What Round Statistics do you want to export?"
    android:textAppearance="@android:style/TextAppearance.Large"
    android:textStyle="bold"
    android:textAlignment="center"
android:layout_marginTop="20dp" />

<Button
    android:id="@+id/button_teams"
    android:layout_width="184dp"
    android:layout_height="wrap_content"
android:layout_gravity="center"
    android:layout_marginTop="50dp"
    android:background="#4CAF50"
    android:onClick="exportTeamscsv"
    android:text="For Teams"
    android:textColor="#F9F9F9"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView" />



<Button
    android:id="@+id/button_pl"
    android:layout_width="184dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="#4CAF50"
    android:onClick="exportPlayerscsv"
    android:text="For Players"
    android:textColor="#F9F9F9"
    android:textSize="16sp"
    android:layout_gravity="center" />

            <Button
                android:id="@+id/button_rounds"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="#4CAF50"
                android:onClick="openNewActivity"
                android:text="View Specific Round"
                android:textColor="#F9F9F9"
                android:textSize="16sp" />

<Button
    android:id="@+id/button_exit"
    android:layout_width="184dp"
    android:layout_height="wrap_content"
android:layout_marginTop="1dp"
    android:background="#DB1D1D"
    android:onClick="openNewActivity"
    android:text="@string/exit"
    android:textColor="#F9F9F9"
    android:textSize="16sp"
    android:layout_gravity="center"
    tools:text="Exit" />

        </LinearLayout>
    </ScrollView>
    </LinearLayout>